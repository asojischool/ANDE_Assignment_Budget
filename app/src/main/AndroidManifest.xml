        </activity>
        <activity
            android:name=".Register"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ScanReceipt"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".AddExpense"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".BillsActivity"></activity>
        <activity
            android:name=".BillsAddActivity"
            android:exported="false"
            android:theme="@style/Theme.Action_Bar_Back_Button"
            >
            <meta-data
                android:name="android.app.lib_name"
                android:value="Add Bill" /></activity>
        <receiver android:name=".BroadcastReceiver.BillReminder"
            android:enabled="true"
            android:exported="true">
        </receiver>
        <activity android:name=".MainActivity" />

    </application>

</manifest>